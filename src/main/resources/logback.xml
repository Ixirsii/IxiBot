<configuration scan="true">
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%logger{36}] %-5level - %msg%n
            </pattern>
        </encoder>
    </appender>

    <appender name="APPLICATION_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%X{Correlation-ID}] [%logger{36}] %-5level - %msg%n
            </pattern>
        </encoder>
        <file>log/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>log/application.log.%d{yyyy-MM-dd,aux}/%d{HH}.log.gz</fileNamePattern>
            <maxHistory>800</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <root level="ALL">
        <appender-ref ref="APPLICATION_LOG"/>
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- <logger name="java.io" level="INFO"/> -->
